<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="board">

	<insert id="insertBoard">
		insert into
			board
		values (
				seq_board_no.nextval,
				#{category},
				#{title},
				#{id},
				#{contents},
				default,
				default,
				default			
				)
			
	<!-- 방금 insert된 board객체의 no컬럼(pk)값을  board.no에 대입 -->	
	<selectKey resultType="int" keyProperty="no" order="AFTER">
		select
			seq_board_no.currval
		from
			dual
	</selectKey>
	
	</insert>
	
	<select id="selectBoardList" resultType="board">
		select
			no, category, title, id, view_cnt, write_date
		from
			board
		order by
			no desc
	</select>
	
	<select id="getTotalContents" resultType="_int">
		select
			count(*)
		from 
			board
	</select>
	
	<select id="selectOneBoardCollection" resultMap="boardCollectionMap">
		select
			*
		from
			board
		where
			no = #{no}
	</select>
	
	<update id="updateViewCnt">
		update
			board
		set 
			view_cnt = view_cnt + 1
		where
			no = #{no}
	</update>
	
	<resultMap type="board" id="boardCollectionMap">
		<id column="no" property="no"/>
		<result column="category" property="category"/>
		<result column="title" property="title"/>
		<result column="id" property="id"/>
		<result column="contents" property="contents"/>
		<result column="write_date" property="writeDate"/>
		<result column="view_cnt" property="viewCnt"/>
		<result column="like_cnt" property="likeCnt"/>
	</resultMap>
		
</mapper>